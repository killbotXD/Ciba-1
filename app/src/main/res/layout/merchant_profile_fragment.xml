<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/colorPrimary"
            android:contentDescription="none" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:contentDescription="none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.card.MaterialCardView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"
            android:elevation="20dp"
            android:outlineAmbientShadowColor="@color/colorPrimaryDark"
            app:cardCornerRadius="52dp">

            <ImageView
                android:id="@+id/merchant_profile_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:contentDescription="USER DISPLAY PICTURE" />
        </android.support.design.card.MaterialCardView>


        <TextView
            android:id="@+id/merchant_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="10dp"
            android:text="NAME"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="6dp"
            android:text="MERCHANT"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:text="CONTACT"
            android:textColor="#505050"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/merchant_profile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="1234567890"
            android:textColor="#000"
            android:textSize="22dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/merchant_edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:elevation="10dp"
            android:text="EDIT"
            android:textSize="18sp"
            app:cornerRadius="8dp"/>
    </LinearLayout>


</RelativeLayout>