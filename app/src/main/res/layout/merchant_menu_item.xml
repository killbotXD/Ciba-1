<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    android:layout_margin="7dp">

    <RelativeLayout
        android:id="@+id/rel_layout_merchant_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_item_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_view_item_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Item Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_name2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:text="Rs."
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/text_view_item_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_name2"
            android:layout_toEndOf="@+id/rs"
            android:layout_toRightOf="@+id/rs"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:paddingTop="10dp"
            android:text="ITEM Price"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="@color/colorPrimaryDark" />
        <ImageView
            android:id="@+id/timer_image2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/rs"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:contentDescription="clock"
            android:src="@drawable/ic_timer_black_24dp"
            android:tint="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/text_view_item_preptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_price2"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/rs"
            android:layout_toRightOf="@+id/rs"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:text="Time"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_item_price2"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/text_view_item_preptime"
            android:layout_toRightOf="@+id/text_view_item_preptime"
            android:paddingStart="2dp"
            android:paddingLeft="2dp"
            android:paddingTop="10dp"
            android:text="minutes"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="@color/colorPrimaryDark" />

        <android.support.design.button.MaterialButton
            android:id="@+id/menu_item_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_item_name2"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/text_view_item_price2"

            android:layout_marginTop="-4dp"
            android:text="EDIT"
            android:textSize="14sp" />
        <android.support.design.button.MaterialButton
            android:id="@+id/menu_item_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_item_name2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-4dp"
           android:layout_toRightOf="@+id/menu_item_edit_button"
            android:text="REMOVE"
            android:textSize="14sp" />

    </RelativeLayout>


</android.support.design.card.MaterialCardView>